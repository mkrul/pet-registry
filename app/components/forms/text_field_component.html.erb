<div class="space-y-1">
  <%= @form.label @attribute, label_text, class: "block text-sm font-medium text-gray-900 dark:text-gray-100" %>

  <% if @type == "textarea" %>
    <%= @form.text_area @attribute,
                        class: input_classes,
                        placeholder: @placeholder,
                        required: @required,
                        rows: @options[:rows] || 4,
                        **@options.except(:class, :rows) %>
  <% else %>
    <%= @form.text_field @attribute,
                         type: @type,
                         class: input_classes,
                         placeholder: @placeholder,
                         required: @required,
                         **@options.except(:class) %>
  <% end %>

  <% if @hint && !has_errors? %>
    <p class="text-sm text-gray-500 dark:text-gray-400"><%= @hint %></p>
  <% end %>

  <% if has_errors? %>
    <p class="text-sm text-red-600 dark:text-red-400"><%= error_message %></p>
  <% end %>
</div>
