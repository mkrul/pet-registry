<footer class="bg-white dark:bg-gray-900 border-t border-gray-200 dark:border-gray-700">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="flex flex-col md:flex-row md:items-center md:justify-between">
      <div class="flex items-center space-x-2 mb-4 md:mb-0">
        <img src="/icon.png" alt="Pet Registry" class="h-6 w-6">
        <span class="text-sm font-medium text-gray-900 dark:text-gray-100">Pet Registry</span>
      </div>

      <nav class="flex flex-wrap gap-x-6 gap-y-2 mb-4 md:mb-0">
        <% footer_links.each do |link| %>
          <%= link_to link[:text], link[:path], class: "text-sm text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-gray-200 transition-colors" %>
        <% end %>
      </nav>
    </div>

    <div class="mt-6 pt-6 border-t border-gray-200 dark:border-gray-700">
      <p class="text-center text-sm text-gray-500 dark:text-gray-400">
        &copy; <%= @current_year %> Pet Registry. All rights reserved.
      </p>
    </div>
  </div>
</footer>
