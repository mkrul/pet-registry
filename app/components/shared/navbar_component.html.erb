        <%= button_to "Sign Out", destroy_user_session_path, method: :delete, class: "block w-full text-left px-3 py-2 text-base font-medium text-gray-700 dark:text-gray-200 hover:text-gray-900 dark:hover:text-gray-100 hover:bg-gray-50 dark:hover:bg-gray-700 rounded-md" %>
