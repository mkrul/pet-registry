<div data-controller="image-modal"
     data-image-modal-open-value="false">

  <div class="cursor-pointer group relative"
       data-action="click->image-modal#open">
    <%= content %>
    <div class="absolute inset-0 bg-black opacity-0 group-hover:opacity-10 transition-opacity pointer-events-none"></div>
    <div class="absolute top-2 right-2 bg-black bg-opacity-50 text-white px-2 py-1 rounded text-sm opacity-0 group-hover:opacity-100 transition-opacity">
      Click to enlarge
    </div>
  </div>

  <div class="fixed inset-0 z-[9999] flex items-center justify-center bg-black bg-opacity-90 p-4 hidden"
       data-image-modal-target="modal"
       data-action="click->image-modal#closeOnBackdrop keydown@window->image-modal#closeOnEscape"
       role="dialog"
       aria-modal="true"
       aria-label="Full size image view"
       tabindex="-1">

    <button type="button"
            class="absolute top-4 right-4 text-white hover:text-gray-300 transition-colors z-10"
            data-action="click->image-modal#close"
            aria-label="Close full size image">
      <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
      </svg>
    </button>

    <img src="<%= image_url %>"
         alt="<%= alt_text %>"
         class="max-h-full max-w-full object-contain"
         data-action="click->image-modal#stopPropagation">

    <% if caption.present? %>
      <div class="absolute bottom-4 left-0 right-0 text-center text-white text-sm bg-black bg-opacity-50 py-2">
        <%= caption %>
      </div>
    <% end %>
  </div>
</div>
