<div class="text-center py-12 px-4">
  <% if @icon %>
    <div class="mx-auto h-12 w-12 text-gray-400 dark:text-gray-500 mb-4">
      <%= @icon %>
    </div>
  <% else %>
    <svg class="mx-auto h-12 w-12 text-gray-400 dark:text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4" />
    </svg>
  <% end %>

  <h3 class="mt-4 text-lg font-medium text-gray-900 dark:text-gray-100"><%= @title %></h3>

  <% if @description %>
    <p class="mt-2 text-sm text-gray-500 dark:text-gray-400"><%= @description %></p>
  <% end %>

  <% if content.present? %>
    <div class="mt-6">
      <%= content %>
    </div>
  <% end %>
</div>
