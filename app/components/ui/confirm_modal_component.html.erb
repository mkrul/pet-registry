<div id="confirm-modal"
     class="fixed inset-0 z-[9999] flex items-center justify-center p-4 hidden"
     data-controller="confirm-modal"
     data-confirm-modal-open-value="false"
     role="dialog"
     aria-modal="true"
     aria-labelledby="confirm-modal-title">

  <div class="fixed inset-0 bg-black bg-opacity-50 transition-opacity"
       data-action="click->confirm-modal#close"
       data-confirm-modal-target="backdrop"></div>

  <div class="relative bg-white dark:bg-gray-800 rounded-lg shadow-xl max-w-md w-full mx-4 z-10"
       data-confirm-modal-target="dialog"
       data-action="keydown@window->confirm-modal#closeOnEscape">

    <div class="p-6">
      <h3 id="confirm-modal-title"
          class="text-lg font-semibold text-gray-900 dark:text-gray-100 mb-2"
          data-confirm-modal-target="title">
        <%= title %>
      </h3>

      <p class="text-gray-600 dark:text-gray-400 whitespace-pre-wrap"
         data-confirm-modal-target="message">
        <%= message %>
      </p>
    </div>

    <div class="flex justify-end gap-3 px-6 py-4 bg-gray-50 dark:bg-gray-700/50 rounded-b-lg">
      <button type="button"
              class="<%= cancel_button_classes %>"
              data-action="click->confirm-modal#close">
        <%= cancel_text %>
      </button>
      <button type="button"
              class="<%= confirm_button_classes %>"
              data-action="click->confirm-modal#confirm"
              data-confirm-modal-target="confirmButton">
        <%= confirm_text %>
      </button>
    </div>
  </div>
</div>
