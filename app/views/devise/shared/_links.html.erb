<div class="mt-6 text-center space-y-2">
  <%- if controller_name != 'sessions' %>
    <p class="text-gray-600 dark:text-gray-400">
      Already have an account?
      <%= link_to "Log In", new_user_session_path, class: "text-blue-500 dark:text-blue-400 hover:underline" %>
    </p>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <p class="text-gray-600 dark:text-gray-400">
      Don't have an account?
      <%= link_to "Sign Up", new_user_registration_path, class: "text-blue-500 dark:text-blue-400 hover:underline" %>
    </p>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <p>
      <%= link_to "Forgot your password?", new_user_password_path, class: "text-blue-500 dark:text-blue-400 hover:underline text-sm" %>
    </p>
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <p>
      <%= link_to "Didn't receive confirmation instructions?", new_user_confirmation_path, class: "text-blue-500 dark:text-blue-400 hover:underline text-sm" %>
    </p>
  <% end %>
</div>
