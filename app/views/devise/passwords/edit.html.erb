<div class="flex items-center justify-center min-h-screen bg-gray-100 dark:bg-gray-900 px-4">
  <div class="bg-white dark:bg-gray-800 shadow-lg rounded-lg p-8 w-full max-w-md">
    <h1 class="text-2xl font-bold text-center text-blue-600 dark:text-blue-400 mb-6">
      Reset your password
    </h1>
    <p class="text-gray-600 dark:text-gray-400 text-center mb-8">
      Enter your new password below.
    </p>

    <%= render "devise/shared/error_messages", resource: resource %>

    <%= form_for(resource, as: resource_name, url: "/reset-password", html: { method: :put },
                 data: {
                   controller: "form-submit form-validation",
                   action: "turbo:submit-start->form-submit#disable turbo:submit-end->form-submit#enable"
                 }) do |f| %>

      <%= f.hidden_field :reset_password_token %>

      <div class="mb-4" data-controller="password-visibility">
        <%= f.label :password, "New password", class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" %>
        <p class="text-xs text-gray-500 dark:text-gray-400 mb-1"><%= @minimum_password_length %> characters minimum</p>
        <div class="relative">
          <%= f.password_field :password,
                               autofocus: true,
                               autocomplete: "new-password",
                               required: true,
                               placeholder: "New password",
                               data: {
                                 password_visibility_target: "input",
                                 form_validation_target: "password",
                                 action: "input->form-validation#validatePasswordMatch"
                               },
                               class: "w-full p-2 border border-gray-300 dark:border-gray-600 rounded bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 placeholder-gray-500 dark:placeholder-gray-400 focus:ring-blue-500 focus:border-blue-500 pr-10" %>
          <button type="button"
                  data-action="click->password-visibility#toggle"
                  class="absolute inset-y-0 right-0 pr-3 flex items-center text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300"
                  aria-label="Toggle password visibility">
            <svg data-password-visibility-target="iconShow" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
            </svg>
            <svg data-password-visibility-target="iconHide" class="h-5 w-5 hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21" />
            </svg>
          </button>
        </div>
      </div>

      <div class="mb-4" data-controller="password-visibility">
        <%= f.label :password_confirmation, "Confirm new password", class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" %>
        <div class="relative">
          <%= f.password_field :password_confirmation,
                               autocomplete: "new-password",
                               required: true,
                               placeholder: "Confirm new password",
                               data: {
                                 password_visibility_target: "input",
                                 form_validation_target: "passwordConfirmation",
                                 action: "input->form-validation#validatePasswordMatch"
                               },
                               class: "w-full p-2 border border-gray-300 dark:border-gray-600 rounded bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 placeholder-gray-500 dark:placeholder-gray-400 focus:ring-blue-500 focus:border-blue-500 pr-10" %>
          <button type="button"
                  data-action="click->password-visibility#toggle"
                  class="absolute inset-y-0 right-0 pr-3 flex items-center text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300"
                  aria-label="Toggle password visibility">
            <svg data-password-visibility-target="iconShow" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
            </svg>
            <svg data-password-visibility-target="iconHide" class="h-5 w-5 hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21" />
            </svg>
          </button>
        </div>
        <p data-form-validation-target="passwordError" class="hidden text-sm text-red-600 dark:text-red-400 mt-1">Passwords do not match</p>
      </div>

      <div class="mb-4">
        <%= f.submit "Change my password",
                     data: { form_submit_target: "button" },
                     class: "w-full bg-blue-500 hover:bg-blue-600 disabled:bg-blue-400 text-white p-2 rounded cursor-pointer transition-colors" %>
      </div>
    <% end %>

    <div class="mt-4 text-center">
      <%= link_to "Back to login", new_user_session_path, class: "text-blue-500 dark:text-blue-400 hover:underline" %>
    </div>
  </div>
</div>
