<script>
  (function() {
    try {
      var storedMode = localStorage.getItem('darkMode');
      if (storedMode === 'true') {
        document.documentElement.classList.add('dark');
      }
    } catch (error) {
      return;
    }
  })();
</script>
<style>
  html { background-color: #f5f5f5; }
  html.dark { background-color: rgb(23 23 23 / var(--tw-bg-opacity, 1)); }
</style>
