<% flash.each do |type, message| %>
  <% next if message.blank? %>
  <%
    base_classes = "mb-4 p-4 rounded-md flex items-center justify-between"
    type_classes = case type.to_sym
                   when :notice, :success
                     "bg-green-50 dark:bg-green-900/30 text-green-800 dark:text-green-300 border border-green-200 dark:border-green-800"
                   when :alert, :error
                     "bg-red-50 dark:bg-red-900/30 text-red-800 dark:text-red-300 border border-red-200 dark:border-red-800"
                   when :warning
                     "bg-yellow-50 dark:bg-yellow-900/30 text-yellow-800 dark:text-yellow-300 border border-yellow-200 dark:border-yellow-800"
                   else
                     "bg-blue-50 dark:bg-blue-900/30 text-blue-800 dark:text-blue-300 border border-blue-200 dark:border-blue-800"
                   end
  %>
  <div class="<%= base_classes %> <%= type_classes %>"
       data-controller="toast"
       data-toast-auto-dismiss-value="true"
       data-toast-dismiss-after-value="5000"
       role="alert">
    <span class="text-sm font-medium"><%= message %></span>
    <button type="button"
            class="ml-4 inline-flex items-center justify-center text-current opacity-50 hover:opacity-100 transition-opacity"
            data-action="click->toast#dismiss"
            aria-label="Dismiss">
      <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>
  </div>
<% end %>
