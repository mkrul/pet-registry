<%= turbo_frame_tag "dashboard_content" do %>
  <div class="dashboard-section">
    <h2>Welcome to your dashboard, <%= @user.email %>!</h2>
    <p>Select a section from the navigation above to get started.</p>

    <div class="dashboard-stats">
      <div class="stat-card">
        <h3>My Reports</h3>
        <p>View and manage your pet reports</p>
        <%= link_to "View Reports", dashboard_reports_path,
            class: "btn btn-primary",
            data: { turbo_frame: "dashboard_content" } %>
      </div>

      <div class="stat-card">
        <h3>My Pets</h3>
        <p>Manage your registered pets</p>
        <%= link_to "View Pets", dashboard_pets_path,
            class: "btn btn-primary",
            data: { turbo_frame: "dashboard_content" } %>
      </div>

      <div class="stat-card">
        <h3>Profile</h3>
        <p>Update your account information</p>
        <%= link_to "Edit Profile", dashboard_profile_path,
            class: "btn btn-primary",
            data: { turbo_frame: "dashboard_content" } %>
      </div>

      <div class="stat-card">
        <h3>Settings</h3>
        <p>Configure your preferences</p>
        <%= link_to "Settings", dashboard_settings_path,
            class: "btn btn-primary",
            data: { turbo_frame: "dashboard_content" } %>
      </div>
    </div>
  </div>
<% end %>
