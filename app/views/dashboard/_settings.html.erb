<%= turbo_frame_tag "dashboard_content" do %>
  <div class="dashboard-section">
    <h2>Settings</h2>
    <p>Configure your account preferences and notification settings.</p>

    <div class="settings-sections">
      <div class="settings-group">
        <h3>Notifications</h3>
        <div class="setting-item">
          <label>
            <input type="checkbox" checked>
            Email notifications for new reports
          </label>
        </div>
        <div class="setting-item">
          <label>
            <input type="checkbox" checked>
            SMS notifications for urgent reports
          </label>
        </div>
      </div>

      <div class="settings-group">
        <h3>Privacy</h3>
        <div class="setting-item">
          <label>
            <input type="checkbox">
            Make my profile public
          </label>
        </div>
        <div class="setting-item">
          <label>
            <input type="checkbox" checked>
            Allow other users to contact me
          </label>
        </div>
      </div>

      <div class="settings-actions">
        <%= link_to "Save Settings", "#", class: "btn btn-primary" %>
        <%= link_to "Reset to Defaults", "#", class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
<% end %>
